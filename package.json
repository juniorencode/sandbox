{
  "name": "sandbox",
  "author": "Carlos Junior Ramos VÃ¡squez",
  "description": "SandBox is a lightweight and versatile development environment designed to run and test JavaScript code quickly and efficiently. Its minimalist approach and intuitive interface make it an ideal tool for developers looking to experiment with code without complex configurations.",
  "version": "0.0.0",
  "type": "module",
  "main": "./main.cjs",
  "scripts": {
    "dev": "vite",
    "build-vite": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "npm run build-vite &&  electron .",
    "build": "npm run build-vite && electron-builder"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.5"
  },
  "webPreferences": {
    "contextIsolation": true,
    "nodeIntegration": false
  },
  "build": {
    "appId": "com.juniorencode.sandbox",
    "productName": "Sandbox",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.cjs",
      "preload.cjs",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "./icon.ico",
      "artifactName": "Sandbox-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "./icon.ico",
      "installerHeaderIcon": "./icon.ico",
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  }
}
